<%- include('partials/adminheader.ejs') %>

    <main class="h-full pb-16 overflow-y-auto">
        <div class="container px-6 mx-auto grid">
            <h2 class="my-6 text-2xl font-semibold text-gray-700 dark:text-gray-200">
                Category
            </h2>
            <!-- CTA -->
            <a class="flex items-center justify-between p-4 mb-8 text-sm font-semibold text-purple-100 bg-purple-600 rounded-lg shadow-md focus:outline-none focus:shadow-outline-purple d-flex justify-content-center"
                href="/admin/addcategory">
                <div class="flex items-center">
                    <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                        <path
                            d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z">
                        </path>
                    </svg>
                    <span class="">Add Catogary</span>
                </div>
                <!-- <span>View more &RightArrow;</span> -->
            </a>

            <!-- General elements -->
            <h4 class="mb-4 text-lg font-semibold text-gray-600 dark:text-gray-300">
                Category
            </h4>

        </div>
        <!-- next work -->


        <!-- New Table -->
        <div class="w-full  rounded-lg shadow-xs">
            <div class="w-full overflow-x-auto">
                <table class="w-full whitespace-no-wrap">
                    <thead>
                        <tr
                            class="text-xs font-semibold tracking-wide text-left text-gray-500 uppercase border-b dark:border-gray-700 bg-gray-50 dark:text-gray-400 dark:bg-gray-800">
                            <th class="px-4 py-3">Name</th>
                            <th class="px-4 py-3">Image</th>
                            <th class="px-4 py-3">Created Date</th>
                            <th class="px-4 py-3">Edit & Delete</th>
                        </tr>
                    </thead>
                    <!-- table body starting -->

                    <% for( let i=0; i < categoryds.length; i++ ) { %>

                        <tbody class="bg-white divide-y dark:divide-gray-700 dark:bg-gray-800">
                            <tr class="text-gray-700 dark:text-gray-400">
                                <td class="px-4 py-3">
                                    <%- categoryds[i].category %>
                                </td>
                                <td class="px-4 py-3 text-sm">
                                    <img class="object-cover w-full h-full rounded-full" src="
                                /image/<%- categoryds[i].imageurl[0].filename %>" alt=""
                                        style="width:75px;height:75px;">
                                </td>
                                <td class="px-4 py-3 text-xs">
                                    <%- categoryds[i].createdAt.toLocaleDateString() %>
                                </td>

                                <td class="px-4 py-3 text-sm ">
                                    <a href="/admin/editcategory/<%-categoryds[i]._id  %> "
                                        class="px-4 py-3 text-sm btn btn-success">Edit</a>
                                    <a href="/admin/deletecategory/<%- categoryds[i]._id %> "
                                        class="px-4 py-3 text-sm btn btn-danger">Delete</a>
                                </td>
                            </tr>
                        </tbody>
                        <% } %>
                </table>
            </div>
        </div>

    </main>
    </body>

    </html>